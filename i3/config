# RASPBERRY PI #
################

set $RASP_IP 10.147.20.190

bindsym $mod+grave exec $terminal -e "ssh pi@$RASP_IP"
bindsym $mod+Shift+grave exec caja smb://$RASP_IP/canraspberrypi/

###########
# SCRIPTS #
###########

set $SCRIPT_PATH ~/.config/i3/i3scripts

bindsym $mod+p exec $SCRIPT_PATH/dmenu_pdf.sh
bindsym $mod+Control+p exec $SCRIPT_PATH/dmenu_pdf.sh -e
# bindsym $mod+Shift+p exec $SCRIPT_PATH/workspace.sh
bindsym $mod+Shift+p exec mpv "$(find /media/$(whoami)/HDD_CAN/Downloads/youtube-dl/video -type d | dmenu -i -l 20)"
bindsym $mod+minus exec $SCRIPT_PATH/move.sh
bindsym $mod+m exec $SCRIPT_PATH/media.sh
bindsym $mod+Shift+m exec $SCRIPT_PATH/media.sh -d
bindsym $mod+Control+m exec $SCRIPT_PATH/media.sh -m
# bindsym $mod+Print exec $SCRIPT_PATH/fehbg.sh
bindsym $mod+Print exec feh --bg-scale "$(find ~/Documents/Mi8/Pictures/Walli\ Artworks/ -type f | dmenu -i -l 20)"

##############################
# VOLUME/BRIGHTNESS CONTROLS #
##############################

# Volume control
bindsym $mod+Prior exec --no-startup-id pulsemixer --change-volume +5 && pkill -RTMIN+12 i3blocks
bindsym $mod+Next exec --no-startup-id pulsemixer --change-volume -5 && pkill -RTMIN+12 i3blocks

# Brightness control
bindsym $mod+Shift+Prior exec --no-startup-id xbacklight -inc 5% && pkill -RTMIN+13 i3blocks
bindsym $mod+Shift+Next exec --no-startup-id xbacklight -dec 5% && pkill -RTMIN+13 i3blocks

#################
# MAIN PROGRAMS #
#################

bindsym $mod+z exec firefox
bindsym $mod+x exec caja
bindsym $mod+c exec emacs
bindsym $mod+Shift+x exec $terminal -e /usr/bin/newsboat

###################
# i3bar(i3blocks) #
###################

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		tray_output primary
        font pango:mono 10
		status_command i3blocks
		position bottom
}